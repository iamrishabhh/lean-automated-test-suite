{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node", "playwright"],
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@data/*": ["test-data/*"]
    },
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "test-data/**/*.json"]
}
